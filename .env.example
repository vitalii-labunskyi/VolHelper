NODE_ENV=production
PORT=3000

# PostgreSQL connection string from Render or Supabase
# Example (Render Managed PostgreSQL):
# DATABASE_URL=postgres://USER:PASSWORD@HOST:5432/DBNAME
DATABASE_URL=

# Enable SSL for managed providers (true|false|disable)
PGSSL=true
# Optional CA bundle path (only if your provider requires custom CA)
# PG_CA_PATH=/etc/ssl/certs/ca.pem

# CORS allowlist (optionally restrict origin)
# CORS_ORIGIN=https://your-domain.onrender.com

JWT_SECRET=change_me_for_production
